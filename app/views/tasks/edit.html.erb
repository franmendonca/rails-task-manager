<div class= "container">
  <%= simple_form_for(@task) do |f|%>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.check_box(:completed) %>
    <%= f.label(:completed, "Mark as completed") %>
    <%= f.submit %>
  <% end%>
  <%= link_to "Go back to your task", task_path, class: "btn btn-secondary"%>
</div>
